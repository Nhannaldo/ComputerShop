
@{
    ViewBag.Title = "LoaiSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using Website.Models
@model IEnumerable<Website.Models.LOAISANPHAM>
<h2>Danh mục Loại sản phẩm</h2>
<div class="text-warning">
    @ViewBag.Error
</div>
<hr />
<div class="col-lg-9">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="btn btn-primary btn-default" href="@Url.Action("Create", "LoaiSanPham")" role="button">Tạo loại sản phẩm mới</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã loại</th>
                            <th>Tên loại</th>
                            <th>Thuộc nhóm</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MaLoaiSP)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenLoaiSP)</td>
                                <td>@Html.DisplayFor(modelItem => item.NHOMSANPHAM.TenNhomSP)</td>
                                <td>
                                    <a href="@Url.Action("Edit", "LoaiSanPham",new { id=item.MaLoaiSP})"><i class="fa fa-pencil fa-fw"></i></a>|
                                    <a onclick="return confirm('Bạn có chắc chắn muốn xoá danh mục này?')" href="@Url.Action("Delete", "LoaiSanPham",new { id=item.MaLoaiSP})"><i class="fa fa-times fa-fw"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

