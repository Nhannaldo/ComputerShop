
@{
    ViewBag.Title = "NhomSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<Website.Models.NHOMSANPHAM>
<h2>Danh mục Nhóm sản phẩm</h2>
<div class="text-warning">
    @ViewBag.CateError
</div>
<hr />
<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="btn btn-primary btn-default" href="@Url.Action("Create", "NhomSanPham")" role="button">Tạo nhóm sản phẩm mới</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã nhóm</th>
                            <th>Tên nhóm</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MaNhomSP)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenNhomSP)</td>
                                
                                <td>
                                    <a href="@Url.Action("Edit", "NhomSanPham",new { id=item.MaNhomSP})"><i class="fa fa-pencil fa-fw"></i></a>|
                                    <a onclick="return confirm('Bạn có chắc chắn muốn xoá danh mục này?')" href="@Url.Action("Delete", "NhomSanPham",new { id=item.MaNhomSP})"><i class="fa fa-times fa-fw"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

