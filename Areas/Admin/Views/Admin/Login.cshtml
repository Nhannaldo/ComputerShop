<!-- Custom CSS -->
<link href="~/Areas/Admin/Content/dist/css/sb-admin-2.css" rel="stylesheet">

<!-- Custom Fonts -->
<link href="~/Areas/Admin/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
@using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Đăng nhập</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <fieldset>
                                <div class="form-group text-danger">@ViewBag.ThongBao</div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Tên đăng nhập" name="UserName" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Mật khẩu" name="Password" type="password" value="">
                                </div>
                                <input type="submit" value="Đăng nhập" class="btn btn-lg btn-success btn-block" />
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Areas/Admin/vendor/jquery/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/Areas/Admin/vendor/bootstrap/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
