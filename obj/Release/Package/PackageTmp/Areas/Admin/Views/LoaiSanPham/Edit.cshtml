@model Website.Models.LOAISANPHAM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ĐIỀU CHỈNH</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Loại sản phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaLoaiSP)

        <div class="form-group">
            <label class="control-label col-md-2">Mã Loại SP</label>
            <div class="col-md-5">
                <input type="text" size="70" name="MaLoai"
                       required class="form-control" readonly value="@Model.MaLoaiSP"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên Loại SP</label>
            <div class="col-md-5">
                <input type="text" size="70" name="TenLoai"
                       required class="form-control" value="@Model.TenLoaiSP"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Nhóm SP</label>
            <div class="col-md-5">
                @Html.DropDownList("MaNhomSP",(SelectList)ViewBag.MaNhomSP,new {@class="form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
