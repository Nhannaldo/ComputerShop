@model Website.Models.NHOMSANPHAM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ĐIỀU CHỈNH </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Nhóm sản phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            <label class="control-label col-md-2">Mã nhóm</label>
            <div class="col-md-3">
                <input type="text" size="70" name="MaNhom"
                       required class="form-control" readonly value="@Model.MaNhomSP"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên nhóm</label>
            <div class="col-md-3">
                <input type="text" size="70" name="TenNhom"
                       required class="form-control" value="@Model.TenNhomSP"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
