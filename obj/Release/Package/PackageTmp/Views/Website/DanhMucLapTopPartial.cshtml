
@model IEnumerable<Website.Models.LOAISANPHAM>
<div class="aside">
    <h3 class="aside-title">Hãng sản xuất</h3>
    <div class="checkbox-filter" id="hang">

            @foreach (var i in Model)
            {
                <div class="input-checkbox">
                <a href="@Url.Action("HienThiLapTop","Website",new { id=i.MaLoaiSP})">@i.TenLoaiSP</a>
                </div>
            }
    </div>
</div>
<div class="aside">
    <h3 class="aside-title">Giá</h3>
    <div class="checkbox-filter">
        <div class="input-checkbox">
            <a href="@Url.Action("HienThiLapTopLoc","Website",new {loc= "duoi10" })">Dưới 10 triệu</a>
        </div>

        <div class="input-checkbox">
            <a href="@Url.Action("HienThiLapTopLoc","Website",new {loc= "1015" })">Từ 10-15 triệu</a>
        </div>

        <div class="input-checkbox">
            <a href="@Url.Action("HienThiLapTopLoc","Website",new {loc= "1520" })">Từ 15-20 triệu</a>
        </div>

        <div class="input-checkbox">
            <a href="@Url.Action("HienThiLapTopLoc","Website",new {loc= "2025" })">Từ 20-25 triệu</a>
        </div>

        <div class="input-checkbox">
            <a href="@Url.Action("HienThiLapTopLoc","Website",new {loc= "tren25" })">Trên 25 triệu</a>
        </div>


    </div>
</div>
<div class="aside">
    <h3 class="aside-title">RAM</h3>
    <div class="checkbox-filter">

        <div class="input-checkbox">
            <a href="@Url.Action("HienThiLapTopLoc","Website",new {loc= "4gb" })">4gb</a>
        </div>

        <div class="input-checkbox">
            <a href="@Url.Action("HienThiLapTopLoc","Website",new {loc= "8gb" })">8gb</a>
        </div>

        <div class="input-checkbox">
            <a href="@Url.Action("HienThiLapTopLoc","Website",new {loc= "16gb" })">16gb</a>
